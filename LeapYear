function isLeap(year) {
    
var div4 = year / 4;
var div100 = year / 100;
var div400 = year /400;

    if (div4 % 1 === 0 && div100 % 1 !== 0) {
        console.log(year + " " + 'is a leap year');
    } else if (div4 % 1 === 0 && div100 % 1 === 0 && div400 % 1 === 0) { 
        console.log(year + " " + 'is a leap year');
    } else {
        console.log( year + " " + ' is not a leap year');
    }
}

isLeap(2000);
